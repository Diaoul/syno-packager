# Common
SBDIR=/usr/local/SickBeard
SBVAR=$SBDIR/var
SABLIB=/usr/local/SABnzbd/lib
SBEXE=$SBDIR/SickBeard/SickBeard.py
PYEXE=/usr/local/bin/python
PAREXE=/usr/local/bin/cfg.parser
NICEXE=/usr/local/bin/nice
IONEXE=/usr/local/bin/ionice
PSEXE=/usr/local/bin/ps
SUEXE=/bin/su
SABEXEUSR=sabnzbduser

# Files
SBCNF=$SBDIR/SickBeard/config.ini
SBLOG=$SBVAR/SickBeard-spk.log
SBINFO=/var/packages/SickBeard/INFO

start_daemon ()
{
	# Log
	echo `date`" : Starting SickBeard..." >> $SBLOG
	
	# Retrieve port
	if [ -r $SBCNF ]; then
		SBPORT=`$PAREXE General web_port $SBCNF`
	fi

	# Update port in INFO file
	sed -i "s/^adminport.*$/adminport=\"$SBPORT\"/g" $SBINFO

	# Start SickBeard
	$SUEXE $SABEXEUSR -s /bin/sh -c "LD_LIBRARY_PATH=$SABLIB $NICEXE -n15 $IONEXE -c2 -n4 $PYEXE $SBEXE --daemon >> $SBLOG 2>&1"
}

stop_daemon ()
{
	# Log
	echo `date`" : Stoping SickBeard..." >> $SBLOG
	
	# Retrive values from previous configuration file as it may have changed
	SBPORT=`$PAREXE General web_port $SBCNF`
	SBHOST=`$PAREXE General web_host $SBCNF`
	SBUSR=`$PAREXE General web_username $SBCNF`
	SBPWD=`$PAREXE General web_password $SBCNF`

	# Correct invalid values
	if [ "$SBHOST" = "0.0.0.0" -o "$SBHOST" = "" ]; then
		SBHOST="localhost"
	fi

	# Kill daemon
	if [ "$SBUSR" = "" -a "$SBPWD" = "" ]; then
		$SUEXE $SABEXEUSR -s /bin/sh -c "wget -q --delete-after 'http://$SBHOST:$SBPORT/home/shutdown/'"
	else
		$SUEXE $SABEXEUSR -s /bin/sh -c "wget -q --delete-after --user=$SBUSR --password=$SBPWD 'http://$SBHOST:$SBPORT/home/shutdown/'"
	fi
	sleep 1

	# Wait until SickBeard is really dead (may take some time)
	counter=20
	while [ $counter -gt 0 ] 
	do
		daemon_status || break
		let counter=counter-1
		sleep 1
	done
}

daemon_status ()
{
	[ "`$SUEXE $SABEXEUSR -s /bin/sh -c \"$PSEXE x | grep SickBeard.py | grep -v grep\"`" != "" ]
}


case $1 in
	start)
		if daemon_status; then
			echo "SickBeard daemon already running !"
			exit 0
		else
			echo "Starting SickBeard daemon..."
			start_daemon
			exit $?
		fi
		;;
	stop)
		echo "Stopping SickBeard daemon..."
		stop_daemon
		exit 0
		;;
	restart)
		stop_daemon
		start_daemon
		exit $?
		;;
	status)
		if daemon_status; then
			echo "Running"
			exit 0
		else
			echo "Not running"
			exit 1
		fi
		;;
	log)
		echo $SBLOG
		exit 0
		;;
	*)
		exit 1
		;;
esac
