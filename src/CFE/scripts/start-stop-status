# Common
CFEDIR=/usr/local/CFE
CFESHR=$CFEDIR/share
CFEVAR=$CFEDIR/var
SYNO3APP=/usr/syno/synoman/webman/3rdparty

# Files
CFELOG=$CFEVAR/CFE-spk.log

start_daemon ()
{
	# Log
	echo `date`" : Starting CFE..." >> $CFELOG

	# Install the application in the main interface.
	if [ -d $SYNO3APP ]
	then
		rm -f $SYNO3APP/CFE
		ln -s $CFESHR/3rdparty $SYNO3APP/CFE
	fi
}

stop_daemon ()
{
	# Log
	echo `date`" : Stoping CFE..." >> $CFELOG

	# Remove the application from the main interface if it was previously added.
	if [ -h $SYNO3APP/CFE ]
	then
		rm -f $SYNO3APP/CFE
	fi
}

daemon_status ()
{
	[ -h $SYNO3APP/CFE ]
}

case $1 in
	start)
		if daemon_status; then
			echo "CFE already running!"
			exit 0
		else
			echo "Starting CFE..."
			start_daemon
			exit $?
		fi
		;;
	stop)
		echo "Stopping CFE..."
		stop_daemon
		exit $?
		;;
	restart)
		stop_daemon
		start_daemon
		exit $?
		;;
	reload)
		if daemon_status; then
			reload_daemon
		fi
		exit $?
		;;
	status)
		if daemon_status; then
			echo "Running"
			exit 0
		else
			echo "Not running"
			exit 1
		fi
		;;
	log)
		echo $CFELOG
		exit 0
		;;
	*)
		exit 1
		;;
esac
